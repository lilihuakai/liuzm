<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="mobile_chekout_layout" inherit_id="website_myaccount_base.mobile_layout">
            <xpath expr="//html/body" position="inside">
                <script type="text/javascript" src="/mobile_payment/static/src/js/payment_method.js"/>
            </xpath>
        </template>
        <template id="payment_parameters" name="Payment Parameters">
            <t t-call="website_myaccount_base.mobile_layout">
                <form class="oe_signup_form" role="form" method="post" t-if="not message">

                    <div class="form-group">
                        <label for="default_acquirer_id" class="control-label">Receipt Method</label>
                       <select id="default_acquirer_id" name="default_acquirer_id" class="form-control" required="required" t-att-value="partner.default_acquirer_id">
                           <option value="">Select Receipt Method</option>
                           <t t-foreach="acquirers or []" t-as="acquirer">
                               <option t-att-value="acquirer.id" t-att-selected="acquirer.id == partner.default_acquirer_id.id"><t t-esc="acquirer.name"/></option>
                           </t>
                       </select>
                    </div>
                    <div class="form-group">
                        <label for="name_real">Real Name</label>
                        <input type="text" class="form-control" id="name_real" name="name_real"  required="required" t-att-value="partner.name_real" placeholder="The name of the WeChat real name certification"/>
                    </div>
                    
                    <p class="alert alert-danger" t-if="error">
                        <t t-esc="error"/>
                    </p>
                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                    <div class="clearfix oe_login_buttons">
                        <button type="submit" class="btn btn-primary pull-left">Confirm</button>
                    </div>

                </form>
            </t>
        </template>
        <template id="payment_parameters" name="Payment Parameters">
            <t t-call="website_myaccount_base.mobile_layout">
                <t t-set="additional_title">提现账户</t>
                <div class="moblie-wd-account">
                    <form method="post">
                        <div class="wa-prompt">默认的支付方式：
                        </div>
                        <div class="wa-payment-type">
                            <div class="payment-type">
                                <p class="wa-img" style="border:none;">
                                    <img src="/website_myaccount_base/static/src/images/wechat.png" alt="" title="wechat" />
                                </p>
                                <p>微信
                                </p>
                                <input type="radio" name="pay-type" value="wechat" checked="checked" />
                            </div>
                            <div style="clear:both;" />
                            <div class="payment-type pa-alipay">
                                <p class="wa-img">
                                    <img src="/website_myaccount_base/static/src/images/alipay.png" alt="" title="alipay" />
                                </p>
                                <p>支付宝
                                </p>
                                <input type="radio" name="pay-type" value="alipay" />
                            </div>
                        </div>
                        <div class="wa-prompt">认证姓名：
                        </div>
                        <div class="wechat-payment form-group">
                            <p>
                                <input type="text" class="form-control" id="name_real" name="name_real" t-att-value="partner.name_real" placeholder="The real name" />
                            </p>
                        </div>
                        <p class="alert alert-danger" t-if="error">
                            <t t-esc="error"/>
                        </p>
                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                        <input type="hidden" name="default_acquirer_id" t-att-value="partner.default_acquirer_id"/>
                        <div class="wa-save-button clearfix oe_login_buttons">
                            <button type="submit" class="btn btn-primary pull-left">保存
                            </button>
                        </div>
                    </form>
                </div>
            </t>
        </template>

    </data>
</openerp>

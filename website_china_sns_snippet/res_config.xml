<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_website_config_settings_sns" model="ir.ui.view">
            <field name="name">Website settings sns</field>
            <field name="model">website.config.settings</field>
            <field name="inherit_id" ref="website.view_website_config_settings" />
            <field name="arch" type="xml">
                <xpath expr="//group[@string='Social Media']/label[@for='social_twitter']" position="before">
                    <label for="social_weibo"/>
                    <div name="social_weibo">
                        <div class="oe_inline">
                            <field name="social_weibo" placeholder="http://weibo.com/sunlightsoft"/>
                        </div>
                    </div>
                    <label for="social_qq"/>
                    <div name="social_qq">
                        <div class="oe_inline">
                            <field name="social_qq" placeholder="http://wpa.qq.com/msgrd?v=3&amp;uin=2848445291&amp;site=qq&amp;menu=yes"/>
                        </div>
                    </div>
                    <!-- <label for="social_weixin"/>
                    <div name="social_weixin">
                        <div class="oe_inline">
                            <field name="social_weixin"/>
                        </div>
                    </div> -->
                    <label for="social_renren"/>
                    <div name="social_renren">
                        <div class="oe_inline">
                            <field name="social_renren" placeholder="http://www.renren.com/343594878/profile"/>
                        </div>
                    </div>
                    <label for="social_phone"/>
                    <div name="social_phone">
                        <div class="oe_inline">
                            <field name="social_phone" placeholder="tel:18675626598"/>
                        </div>
                    </div>
                    <label for="social_mail"/>
                    <div name="social_mail">
                        <div class="oe_inline">
                            <field name="social_mail" placeholder="mailto:sales@zhsunlight.cn"/>
                        </div>
                    </div>
                    <label for="social_beian"/>
                    <div name="social_beian">
                        <div class="oe_inline">
                            <field name="social_beian" placeholder="粤ICP备15011094号"/>
                        </div>
                    </div>
                    <label for="social_statis"/>
                    <div name="social_statis">
                        <div class="oe_inline">
                            <field name="social_statis" placeholder="cnzz website code e.g. 1000172658"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
